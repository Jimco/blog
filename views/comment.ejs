<div class="comm-wrap">
  <div class="top-reply-box">
    <form method="post">
      <div class="reply-info">
        <% if(user){ %>
        <div class="input-line"><input type="text" name="name" value="<%= user.name %>"></div>
        <div class="input-line"><input type="text" name="email" value="<%= user.email %>"></div>
        <div class="input-line"><input type="text" name="website" value="<%= user.website %>"></div>
        <% }else{ %>
        <div class="input-line"><input type="text" name="name" placeholder="姓名"></div>
        <div class="input-line"><input type="text" name="email" placeholder="邮箱"></div>
        <div class="input-line"><input type="text" name="website" placeholder="网址"></div>
        <% } %>
