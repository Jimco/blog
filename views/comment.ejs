        <!-- <a class="headface" href="javascript:void(0);"><img src="../public/upload/1084-mbugoq.jpg" width="30px" height="30px" alt="Jimco"></a> -->
        <div class="reply-box-cont">
          <textarea name="content" placeholder="说点什么吧..."></textarea>
        </div>
        <div class="pub-toolbar">
          <button type="submit" class="pub-btn">发布</button>
          <a href="javascript:void(0);" class="add-emote" title="插入表情">表情</a>
        </div>
      </div>
      
    </form>
  </div>

