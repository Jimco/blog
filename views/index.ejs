<%- include header %>

  <div class="xymain">
    <%- include side %>
    
    <div class="main-wrap">

      <% if(success){ %><div><%= success%></div><% } %>
      <% if(error){ %><div><%= error%></div><% } %>
      <p>Welcome to <%= title %></p>

      <ul>
      <% posts.forEach(function(post, index){ %>
        <li>
          <h1><a href="#" title="<%= post.title %>"><%= post.title %></a></h1>
          <div class="cont-meta">
            <span class="author">作者：<a href="#" title="<%= post.name %>"><%= post.name %></a></span>
            <span class="date">日期：<%= post.time.minute %></span>
          </div>
          <div class="cont-abstract">
            <%- post.post %>
          </div>
        </li>
      <% }) %>  
      </ul>

    </div>
    
  </div>

<%- include footer %>