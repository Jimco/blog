<%- include header %>

  <div class="xymain">
    <%- include side %>
    
    <div class="main-wrap">

      <% if(success){ %><div><%= success%></div><% } %>
      <% if(error){ %><div><%= error%></div><% } %>
      <p>Welcome to <%= title %></p>

      <ul>
      <% posts.forEach(function(post, index){ %>
        <li>
          <h1><a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>" title="<%= post.title %>"><%= post.title %></a></h1>
          <div class="cont-meta">
            <span class="author">作者：<a href="/u/<%= post.name %>" title="<%= post.name %>"><%= post.name %></a></span>
            <span class="date">日期：<%= post.time.minute %></span>
            <span class="tags">
              标签：
              <% post.tags.forEach(function(tag, index){ %>
                <% if(tag){ %><a href="/tags/<%= tag %>"><%= tag %></a><% } %>
              <% }) %>
            </span>
            <span class="views">浏览：<%= post.pv %></span>
            <span class="views">评论：<%= post.comments.length %></span>
          </div>
          <div class="cont-abstract">
            <%- post.post %>
          </div>
        </li>
      <% }) %>  
      </ul>

      <%- include pagenav %>
    </div>
    
  </div>

<%- include footer %>