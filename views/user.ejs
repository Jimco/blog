<%- include header %>

  <div class="xymain">
    <%- include side %>
    
    <div class="main-wrap">
      <ul>
      <% posts.forEach(function(post, index){ %>
        <li>
          <h1><a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>" title="<%= post.title %>"><%= post.title %></a></h1>
          <div class="cont-meta">
            <span class="author">作者：<a href="/u/<%= post.name %>" title="<%= post.name %>"><%= post.name %></a></span>
            <span class="date">日期：<%= post.time.minute %></span>
          </div>
          <div class="cont-abstract">
            <%- post.post %>
          </div>
        </li>
      <% }) %>  
      </ul>

      <%- include pagenav %>
    </div>
    
  </div>

<%- include footer %>