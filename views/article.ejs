<%- include header %>

  <div class="xymain">
    <%- include side %>
    <div class="post-box">
      <h1><%= post.title %></h1>
      <div class="cont-meta">
        <span class="author">作者：<a href="/u/<%= post.name %>" title="<%= post.name %>"><%= post.name %></a></span>
        <span class="date">日期：<%= post.time.minute %></span>
        <% if(user && (user.name === post.name)){ %>
        <span class="edit"><a href="/edit/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">编辑</a></span>
        <span class="delete"><a href="/remove/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">删除</a></span>
        <% } %>
      </div>
      <div class="cont-desc">
        <%- post.post %>
      </div>
    </div>
  </div>

<%- include footer %>