<%- include header %>

  <div class="xymain">
    <%- include side %>
    <div class="post-box">
      <h1><%= post.title %></h1>
      <div class="cont-meta">
        <span class="author">作者：<a href="/u/<%= post.name %>" title="<%= post.name %>"><%= post.name %></a></span>
        <span class="date">日期：<%= post.time.minute %></span>
        <span class="tags">
          标签：
          <% post.tags.forEach(function(tag, index){ %>
            <% if(tag){ %> <a class="tag" href="/tags/<%= tag %>"><%= tag %></a><% } %>
          <% }) %>
        </span>
        <span class="views">浏览：<%= post.pv %></span>
        <span class="commnums">评论：<%= post.comments.length %></span>
        <% if(user && (user.name === post.name)){ %>
        <span class="edit"><a href="/edit/<%= post._id %>">编辑</a></span>
        <span class="delete"><a href="/remove/<%= post._id %>">删除</a></span>
        <% } %>
      </div>
      <div class="cont-desc">
        <%- post.post %>
      </div>

      <%- include comment %>
    </div>
  </div>

<%- include footer %>